<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray1"
    tools:context=".Details">

    <TextView
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Trust Name"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/key_people_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Name"
        android:layout_marginTop="20dp"
        android:text="Key People"
        android:textColor="@color/white"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/key_people_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/key_people_text"
            android:text="Chairman"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/volunteers_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/key_people_names"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:text="Volunteers" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gaurav, Abhishek, Praveen"
            android:layout_below="@id/volunteers_text"
            android:textColor="@color/white"
            android:id="@+id/volunteers_names"
            />

    <TextView
        android:id="@+id/address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/volunteers_names"
        android:layout_marginTop="20dp"
        android:text="Address"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/address_in_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_text"
        android:text="Ambedkar Street, Byatarayanapura, Airport Road
Bangalore, Karnataka 560092
India"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/donated_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_in_details"
        android:layout_marginTop="20dp"
        android:text="Donated by"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/donor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/donated_by"
        android:backgroundTint="@color/Gray"
        android:inputType="textPersonName"
        android:visibility="gone"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_in_details"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Please enter amount"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/INR001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/amount"
        android:backgroundTint="@color/white"
        android:ems="5"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="@color/white" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/donate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/Orange"
        android:text="Donate"
        app:cornerRadius="50dp" />


</RelativeLayout>