<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Read_more">

    <ImageView
        android:id="@+id/moon"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/moon"
        android:scaleType="fitXY"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="30dp">

        <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:backgroundTint="@color/white"
        android:background="@color/white"
            android:id="@+id/back1"
        />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:elevation="10dp"
        app:cardCornerRadius="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_share_24"
           android:id="@+id/share1" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="20dp"
        android:background="@color/Orange"
        android:id="@+id/fbtn1"
        android:backgroundTint="@color/Orange"
        />

    <TextView
        android:id="@+id/title"
        style="@style/Theme.AppCompat.DayNight.DarkActionBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fbtn1"
        android:layout_centerHorizontal="true"
        android:text="LET THERE BE"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:textColor="@color/fade_blue"
        android:text="Things always remain same"
        android:id="@+id/description"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is sample text for giving read more on different trustees."
            android:textSize="16sp"
            android:id="@+id/sample"/>

    </ScrollView>

</RelativeLayout>