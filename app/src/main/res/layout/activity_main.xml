<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray1"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="5dp">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="@string/logo_image"
                            android:src="@drawable/i6" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@id/logo"
                        android:layout_alignBottom="@id/logo"
                        android:layout_marginStart="5dp"
                        android:layout_toStartOf="@id/my_wishlist"
                        android:layout_toEndOf="@id/logo"
                        android:fontFamily="@font/new_font"
                        android:gravity="center_vertical"
                        android:text="@string/seven_stars"
                        android:textColor="@color/Orange"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="5dp">

                        <ImageView
                            android:id="@+id/ProfileImage"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:visibility="gone"
                            android:contentDescription="@string/profile_set"
                            tools:ignore="ImageContrastCheck" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/card"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/card"
                        android:gravity="center_vertical"
                        android:text="@string/name_of_donor"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/star"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="16dp"
                        android:drawablePadding="10dp"
                        android:ellipsize="end"
                        android:maxEms="8"
                        android:maxLines="3"
                        android:text="@string/email_id"
                        android:textColor="#262626"
                        android:visibility="gone" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/n1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        app:cardCornerRadius="40dp">

                    <ImageView
                        android:id="@+id/notification"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@color/black"
                        android:src="@drawable/ic_baseline_notifications_24" />

                    </androidx.cardview.widget.CardView>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/my_wishlist"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:visibility="gone"
                        android:layout_toStartOf="@id/card"
                        android:backgroundTint="@color/white"
                        android:text="Wishlist"
                        android:textColor="@color/gray1"
                        android:textStyle="bold"
                        app:cornerRadius="10dp"
                        app:strokeColor="@color/Light_Gray" />

                </RelativeLayout>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relative1"
            android:backgroundTint="@color/black" />

    </RelativeLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabCradleMargin="10dp"
        android:backgroundTint="@color/gray1"
        app:fabCradleRoundedCornerRadius="50dp"
        >


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            android:background="@android:color/transparent"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_menu" />
    </com.google.android.material.bottomappbar.BottomAppBar>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_gravity="bottom"
        android:id="@+id/frameLayout"
        >
    </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>





