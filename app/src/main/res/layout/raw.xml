<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    app:strokeWidth="2dp"
    app:strokeColor="@color/fade_blue"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@id/menu"
            android:text="Trust Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_toStartOf="@id/menu"
                android:text="TextView"
                android:layout_below="@id/name"/>


        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/ic_baseline_more_vert_24" />

            <TextView
                android:id="@+id/key_people_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/type"
                android:text="Key_people"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/key_people_view"
                android:id="@+id/volunteers_view"
                android:text="Volunteers"
                android:layout_below="@id/type"
                android:visibility="gone"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address_view"
                android:text="Address"
                android:layout_toEndOf="@id/volunteers_view"
                android:layout_below="@id/type"
                android:visibility="gone"
                />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_below="@id/type"
            android:scaleType="fitXY" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/select"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image1"
            android:text="Select"
            android:textColor="@color/Orange"
            android:textStyle="bold"
            app:iconTint="#323A6A"
            app:icon="@drawable/ic_baseline_thumb_up_24"
            android:layout_marginStart="5dp"
            app:cornerRadius="10dp"
            app:strokeColor="@color/Light_Gray" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_below="@id/image1"
            android:layout_alignParentEnd="true"
            android:text="Add to wishlist"
            android:textAllCaps="false"
            android:textColor="@color/Light_Pink"
            android:id="@+id/wishlist"
            app:iconTint="#323A6A"
            app:icon="@drawable/ic_baseline_view_list_24"
            />


    </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>









