<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login1"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:layout_marginTop="50dp"
            android:text="Welcome!"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text2"
            android:textColor="@color/Light_Gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="Log in with OTP or Google Sign In" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:backgroundTint="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:strokeColor="@color/glowing_blue"
            app:cardCornerRadius="10dp"
            app:strokeWidth="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/number"
                    android:layout_alignBottom="@id/number"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/smartphone" />

                <EditText
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/image2"
                    android:gravity="center"
                    android:textColor="@color/Light_Gray"
                    android:hint="Phone Number"
                    android:inputType="number"
                    android:textColorHint="@color/Light_Gray" />

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/send_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card1"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/light_blue_900"
            android:text="Send OTP"
            android:textColor="@color/white" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/send_otp"
            android:layout_marginStart="50dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            app:cardCornerRadius="10dp"
            app:strokeColor="@color/glowing_blue"
            app:strokeWidth="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/image3"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:hint="Enter OTP"
                    android:textColor="@color/Light_Gray"
                    android:inputType="number"
                    android:textColorHint="@color/Light_Gray"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/otp"
                    android:layout_alignBottom="@id/otp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/lock" />

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>


        <Button
            android:id="@+id/login1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card2"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="80dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/light_blue_900"
            android:text="Log In" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login1"
            android:gravity="center"
            android:textColor="@color/Light_Gray"
            android:paddingBottom="10dp"
            android:text="Or connect using" />


        <com.google.android.gms.common.SignInButton
            android:id="@+id/google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_centerHorizontal="true" />



    </RelativeLayout>

</ScrollView>